//bubble sort(early exit)
#include <stdio.h>
#include <stdlib.h>
int main(){
    int *ptr,n,temp,flag=0,pass=0;
    printf("enter number of elements: ");
    scanf("%d",&n);
    ptr=(int*)malloc(n*sizeof(int));
    for(int i=0;i<n;++i){
        printf("enter element number %d: ",i+1);
        scanf("%d",&ptr[i]);
    }
    for(int i=0;i<n-1;i++){
        flag=0;
        for(int j=0;j<n-1-i;j++){
            if(ptr[j]>ptr[j+1]){
                temp=ptr[j];
                ptr[j]=ptr[j+1];
                ptr[j+1]=temp;
                ++flag;
            }
        }
        pass++;
        if(flag==0){
         break;
        }
    }
    for(int i=0;i<n;++i){
        printf("%d ",ptr[i]);
    }
    printf("\n%d pass executed",pass);
    free(ptr);
    return 0;
}
